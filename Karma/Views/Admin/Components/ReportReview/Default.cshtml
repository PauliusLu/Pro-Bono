@model IEnumerable<Karma.Models.Report>

@{
    ViewData["Title"] = "Default";
}

<h1>Default</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostOwnerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReporterId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportMessage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostOwnerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReporterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportMessage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
