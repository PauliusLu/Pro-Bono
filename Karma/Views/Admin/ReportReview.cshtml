    <button class="btn btn-danger">Reject report</button>
</a>*@
@*Cancel*@
<div class="form-group">
    <a asp-action="SwitchToTabs" asp-route-adminTab="@Karma.Enums.AdminTab.ReportReview"
       class="btn btn-primary">
        Cancel
    </a>
</div>


