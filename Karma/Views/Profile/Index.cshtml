@model Karma.Areas.Identity.Pages.Account.Manage.IndexModel

@{
    ViewData["Title"] = "Profile";
}

<head>
    <link href="~/css/rating.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<h4 class="col-md-4 mb-3" style="font-size: 40px;"><b>@ViewData["Title"]</b></h4>
<html>
<body>
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/@Model.currentUser.GetFullImagePath()" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Model.currentUser.Name @Model.currentUser.Surname</h4>
                                    <p class="text-secondary mb-1">Karma</p>
                                    <p class="text-muted font-size-sm">@Model.currentUser.UserName</p>
                                    @if (Model.RatingAverage != 0)
                                    {
                                        for (int i = 0; i < Model.RatingAverage; ++i)
                                        {
                                            <span class="fa fa-star checked"></span>
                                        }
                                        for (int i = 0; i < (5 - Model.RatingAverage); ++i)
                                        {
                                            <span class="fa fa-star"></span>
                                        }
                                        <p><a asp-controller="UserReviews" asp-action="Index" asp-route-userId="@Model.UserId">View reviews</a></p>
                                    }
                                    else
                                    {
                                        <p class="text-primary font-size-sm">No reviews</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Username</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.currentUser.UserName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.currentUser.Name @Model.currentUser.Surname
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Description</h6>
                                </div>
                                <div style="height: 66px; overflow: hidden; overflow-y: scroll" class="col-sm-9 text-secondary">
                                    @Model.currentUser.Description
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="~/Areas/Identity/Pages/Account/Manage/History.cshtml" for="@Model" />
    </div>
</body>
</html>