@model IEnumerable<Karma.Models.Charity>

@if (Model == null || !Model.Any())
{
    <h3>We're sorry, there are no charities that request or donate @ViewBag.ItemType</h3>
}
else
{
    <h3>Charities that donate or request @ViewBag.ItemType</h3>
}
<div class="card-deck">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            @if (item.ImagePath != null && item.ImagePath != "")
            {
                <img src="/@Charity.ImagesDirName/@item.ImagePath" asp-append-version="true"
                     class="card-img-top" alt="">
            }
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(m => item.Name)</h5>
                <p class="card-text">@Html.DisplayFor(model => item.Description)</p>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">@Html.DisplayFor(m => item.Name)</a>
            </div>
        </div>
    }
</div>

<style>
    .card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: cover;
    }
</style>