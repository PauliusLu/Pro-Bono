@model Karma.Models.CharityItemType

@{
    ViewData["Title"] = "Create";
}

<h5>Add a category</h5>
<br />
<form asp-controller="CharityItemTypes" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CharityId" />
    <div class="form-group">
        <label asp-for="ItemTypeId" class="control-label">Category</label>
        <select asp-for="ItemTypeId" class="form-control"
                asp-items='@new SelectList(ItemTypes.Types, "Key", "Value")'>
            <option value="-1">Select...</option>
        </select>
        <span asp-validation-for="ItemTypeId" class="text-danger"></span>
        <span class="text-danger">@Html.ValidationMessage("ItemTypeExists")</span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

