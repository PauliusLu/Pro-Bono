@model Karma.Models.Post

@{
    ViewData["Title"] = Html.DisplayFor(model => model.Title);
}
<h4>User @Post.GetPostTypeName(Model.PostType)s</h4>
<h1><bold>@Html.DisplayFor(model => model.Title)</bold></h1>

<div>
    <hr />
    Category: @Post.GetItemTypeName(Model.ItemType)
    <br />
    @Html.DisplayFor(model => model.PostText)
    <br />
    @if (Model.Image != null && Model.Image != "")
    {
        <img src="Model.Image" alt="Item image" />
    }
</div>
<br />
<div>
    Posted at @Html.DisplayFor(model => model.PostingDate)
</div>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>
