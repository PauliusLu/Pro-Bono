@model Karma.Models.Report

@{
    ViewData["Title"] = "ReportReview";
}

<h1>ReportReview</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostOwnerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostOwnerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReporterId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReporterId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReportState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReportMessage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportMessage)
        </dd>
    </dl>
</div>

@*Confirm*@
@*<a asp-controller="Admin" asp-action="ReportReview"  method="post">
    <button class="btn btn-success">Confirm report</button>
</a>*@
<form asp-controller="Admin"
      asp-action="ReportReview" method="post" asp-route-reportId="@Model.Id">
    <input class="btn btn-success" type="submit" name="confirm" value="Confirm report" />
    <input class="btn btn-success" type="submit" name="reject" value="Reject report" />
</form>
@*Reject*@
